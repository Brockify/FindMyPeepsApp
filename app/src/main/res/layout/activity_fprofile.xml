<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/myLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Profileview"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Friend"
            android:id="@+id/friendTextView"
            android:textSize="100px"
            android:layout_centerHorizontal="true" />



        <ImageView
            android:id="@+id/imgView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:background="@color/grey"
            android:layout_below="@+id/friendTextView">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Bio"
            android:id="@+id/titlebio"
            android:textSize="60px"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgView"
            android:textStyle="bold" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bio"
            android:id="@+id/friendBio"
            android:textSize="50px"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/titlebio"
            android:width="200dp"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Last Comment"
            android:id="@+id/titlecomment"
            android:textSize="60px"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/friendBio"
            android:textStyle="bold" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bio"
            android:id="@+id/friendlastcomment"
            android:textSize="50px"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/titlecomment"
            android:width="200dp"
            android:textAlignment="center"
            android:gravity="center_horizontal|left" />

    </RelativeLayout>