<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <!-- Name Label -->

    <TextView
        android:id="@+id/username"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:textSize="25dp"
        android:textStyle="bold"
        android:height="60dp"
        android:layout_x="2dp"
        android:layout_y="13dp"
        android:layout_centerVertical="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/deleteButton"
        android:focusable="false"
        android:textSize="20sp"
        android:focusableInTouchMode="false"
        android:onClick="deleteFriend"
        android:layout_x="164dp"
        android:layout_y="0dp"
        android:background="@drawable/delete"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="93dp"
        android:layout_height="75dp"
        android:id="@+id/profileButton"
        android:focusable="false"
        android:textSize="20dp"
        android:focusableInTouchMode="false"
        android:background="@drawable/profile"
        android:onClick="profileButtonClicked"
        android:layout_x="279dp"
        android:layout_y="0dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/deleteButton"
        android:layout_toEndOf="@+id/deleteButton" />


</RelativeLayout>