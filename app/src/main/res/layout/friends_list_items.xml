<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <!-- Name Label -->

    <TextView
        android:id="@+id/username"
        android:layout_width="300px"
        android:layout_height="40dp"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:textSize="17dp"
        android:textStyle="bold"
        android:height="60dp"
        android:layout_x="2dp"
        android:layout_y="13dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/deleteButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/deleteButton"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="deleteFriend"
        android:layout_x="164dp"
        android:layout_y="0dp"
        android:background="@drawable/circleex"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/profileButton"
        android:focusable="false"
        android:textSize="20dp"
        android:focusableInTouchMode="false"
        android:background="@drawable/userblack"
        android:onClick="profileButtonClicked"
        android:layout_x="279dp"
        android:layout_y="0dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />


</RelativeLayout>