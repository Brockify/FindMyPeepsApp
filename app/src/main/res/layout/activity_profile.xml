<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Profileview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Username"
        android:id="@+id/usernameTextView"
        android:textSize="100px"
        android:layout_centerHorizontal="true" />
    <Button

    android:id="@+id/Change"
    android:layout_width="100dp"
    android:layout_height="35dp"
    android:text="Reset"
    android:background="#3366CC"
    android:textColor="#B0E0E6"
    android:bottomLeftRadius="8dp"
    android:bottomRightRadius="8dp"
    android:topLeftRadius="8dp"
    android:topRightRadius="8dp"
        android:layout_alignTop="@+id/Newuser"
        android:layout_toRightOf="@+id/Newuser"
        android:layout_toEndOf="@+id/Newuser" />

    <EditText
        android:id="@+id/Newuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="true"
        android:hint="Change Username"
        android:imeOptions="actionNext"
        android:layout_below="@+id/Verify"
        android:layout_alignLeft="@+id/Verify"
        android:layout_alignStart="@+id/Verify"
        android:layout_marginTop="36dp" />

    <Button

        android:id="@+id/Delete"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Delete Account"
        android:background="#3366CC"
        android:textColor="#B0E0E6"
        android:bottomLeftRadius="8dp"
        android:bottomRightRadius="8dp"
        android:topLeftRadius="8dp"
        android:topRightRadius="8dp"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/Verify"
        android:layout_toEndOf="@+id/Verify"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/Verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="true"
        android:hint="Confirm Username"
        android:imeOptions="actionNext"
        android:layout_alignTop="@+id/Delete"
        android:layout_toLeftOf="@+id/image"
        android:layout_toStartOf="@+id/image" />





    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="uploadImage"
        android:text="Upload"
        android:id="@+id/button"
        android:layout_below="@+id/imgView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:checked="false"
        android:layout_above="@+id/button"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:clickable = "false"

        />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:onClick="loadImagefromGallery"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="@color/grey"
        >
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Edit Profile Picture"
        android:id="@+id/textView"
        android:paddingBottom="10dp"
        android:layout_below="@+id/usernameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

</RelativeLayout>